{% extends 'backoffice/backofficebase.html.twig' %}

{% block title %}Casting index{% endblock %}

{% block body %}

    <h1>Casting index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Role</th>
                <th>CreditOrder</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for casting in castings %}
            <tr>
                <td>{{ casting.id }}</td>
                <td>{{ casting.role }}</td>
                <td>{{ casting.creditOrder }}</td>
                <td>
                    <a href="{{ path('backoffice_casting_show', {'id': casting.id}) }}" class="btn btn-info">show</a>
                    <a href="{{ path('backoffice_casting_edit', {'id': casting.id}) }}" class="btn btn-warning">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('backoffice_casting_new') }}" class="btn btn-success">Create new</a>
{% endblock %}
