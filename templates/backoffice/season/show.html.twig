{% extends 'backoffice/backofficebase.html.twig' %}

{% block title %}Season{% endblock %}

{% block body %}
    <h1>Season</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ season.number }}</td>
            </tr>
            <tr>
                <th>EpisodesCount</th>
                <td>{{ season.episodesCount }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('backoffice_season_index') }}" class="btn btn-info">back to list</a>

    <a href="{{ path('backoffice_season_edit', {'id': season.id}) }}" class="btn btn-warning">edit</a>

    {{ include('backoffice/season/_delete_form.html.twig') }}
{% endblock %}
